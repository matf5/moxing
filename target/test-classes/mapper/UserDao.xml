<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace指定我们的到具体的bean -->
<mapper namespace="com.moxing.ssm.dao.UserDao">
    <resultMap id="BaseResultMap" type="com.moxing.ssm.model.User" >
        <id column="id" property="id" jdbcType="INTEGER" />
        <result column="phone_num" property="phonenum" jdbcType="VARCHAR" />
        <result column="password" property="password" jdbcType="VARCHAR" />
        <result column="cDate" property="cdate" jdbcType="TIMESTAMP" />
        <result column="mDate" property="mdate" jdbcType="TIMESTAMP" />
        <result column="isValid" property="isValid" jdbcType="INTEGER" />
    </resultMap>
    <!--查找-->
    <select id="findOneById" resultType="User" parameterType="String">
    SELECT
    *
    FROM
    `user`
    WHERE
    id = #{userId}
    </select>

    <!--增加语句-->
    <insert id="add" parameterType="User">
        INSERT INTO
        `user`
        (`phone_num`,`password`,`isValid`)
        VALUES
        (#{phonenum},#{password},1)
    </insert>
